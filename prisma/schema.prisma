generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Yakap {
  yakap_id  String   @id @default(uuid())
  fullname  String
  address   String?
  brgy_id   String
  user_id   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // brgy Brgy @relation(fields: [brgy_id], references: [brgy_id])
  // user User @relation(fields: [user_id], references: [user_id])

  @@index([fullname])
  @@index([brgy_id])
}

model Brgy {
  brgy_id   String   @id @default(uuid())
  city_id   String
  brgy_name String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  city   City    @relation(fields: [city_id], references: [city_id])
  // yakaps Yakap[]
}

model City {
  city_id   String   @id @default(uuid())
  prov_id   String
  city_name String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  province Province @relation(fields: [prov_id], references: [prov_id])
  brgies   Brgy[]
}

model Province {
  prov_id   String   @id @default(uuid())
  prov_name String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  cities    City[]
}

model User {
  user_id   String   @id @default(uuid())
  username  String   @unique
  password  String
  name      String?
  role      String   @default("ENCODER")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // yakaps Yakap[]
}